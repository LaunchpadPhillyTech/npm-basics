{
    "name": "npm-scripts-demo",
    "version": "1.0.0",
    "description": "Advanced NPM scripting demonstration project",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "start:dev": "NODE_ENV=development nodemon src/index.js",
        "start:prod": "NODE_ENV=production node src/index.js",
        "dev": "concurrently \"npm run start:dev\" \"npm run watch:css\" \"npm run watch:docs\"",
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "prebuild": "npm run clean && echo 'Starting build process...'",
        "postbuild": "npm run optimize && echo 'Build completed successfully!'",
        "clean": "rimraf dist coverage docs",
        "optimize": "echo 'Running post-build optimizations...'",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
        "lint-and-format": "npm run lint && npm run format",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "db:migrate": "sequelize db:migrate",
        "db:seed": "sequelize db:seed:all",
        "db:setup": "npm run db:migrate && npm run db:seed",
        "db:reset": "sequelize db:migrate:undo:all && npm run db:setup",
        "docs": "jsdoc -c jsdoc.conf.json -d docs src",
        "docs:serve": "npm run docs && serve docs",
        "watch:docs": "nodemon --watch src --ext js,jsx --exec \"npm run docs\"",
        "watch:css": "sass --watch src/styles:dist/css",
        "build:css": "sass src/styles:dist/css --style compressed",
        "deploy": "npm run build && aws s3 sync dist/ s3://$BUCKET_NAME",
        "deploy:staging": "BUCKET_NAME=my-app-staging npm run deploy",
        "deploy:prod": "BUCKET_NAME=my-app-production npm run deploy",
        "security": "npm audit && npm audit fix",
        "update-deps": "npm update && npm audit",
        "preinstall": "node scripts/check-node-version.js",
        "postinstall": "echo 'Installation completed! Run npm run dev to get started.'",
        "release": "npm run test && npm run build && npm version patch && npm publish",
        "release:minor": "npm run test && npm run build && npm version minor && npm publish",
        "release:major": "npm run test && npm run build && npm version major && npm publish"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "nodemon": "^2.0.20",
        "rimraf": "^3.0.2",
        "sass": "^1.56.0",
        "serve": "^14.1.2",
        "eslint": "^8.28.0",
        "prettier": "^2.8.0",
        "jest": "^29.3.0",
        "jsdoc": "^4.0.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.0",
        "sequelize-cli": "^6.5.2"
    },
    "dependencies": {
        "express": "^4.18.2",
        "sequelize": "^6.26.0"
    }
}